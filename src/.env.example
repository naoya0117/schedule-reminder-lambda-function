# AWS Configuration (for LocalStack)
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localstack:4566

# SSM Parameter Store Configuration
SSM_PARAM_PREFIX=/lambda-functions/schedule-reminder

# Application Secrets (PARAM_ prefix variables are automatically registered to Parameter Store)
# PARAM_NOTION_API_KEY maps to: /lambda-functions/schedule-reminder/param-notion-api-key
# PARAM_REMINDER_CONFIG_DB_ID maps to: /lambda-functions/schedule-reminder/param-reminder-config-db-id
PARAM_NOTION_API_KEY=your_notion_integration_api_key_here
PARAM_REMINDER_CONFIG_DB_ID=your_notion_master_database_id_here

# Development/Debug
DEBUG=0
DEBUG_MODE=0

# Holiday API (optional)
# Example: https://holidays-jp.github.io/api/v1/date.json
HOLIDAY_API_URL=
